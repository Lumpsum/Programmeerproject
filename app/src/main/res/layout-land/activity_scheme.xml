<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mprog.nl.programmeerproject.Activities.SchemeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_above="@+id/menuLinearLayout"
        android:background="@drawable/background_running_landscape"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/buttonLinearLayout"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorTextBackFirst"
        android:padding="6dp"
        >

    <TextView
        android:id="@+id/schemeTopFitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/topFitness"
        android:textSize="26sp"
        />

    <ListView
        android:id="@+id/schemeTopFitList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/schemeTopFitText"
        >
    </ListView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorTextBackSecond"
        android:padding="6dp"
        >

    <TextView
        android:id="@+id/schemeTopRunText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/topRunning"
        android:textSize="26sp"
        />

    <ListView
        android:id="@+id/schemeTopRunList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/schemeTopRunText"
        >
    </ListView>

    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTextBackFirst"
        android:padding="6dp"
        >

    <Button
        android:id="@+id/schemeSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/search"
        />

    <Button
        android:id="@+id/schemeCreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/createOwn"
        />

    </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/bottom_buttons"></include>

</RelativeLayout>
