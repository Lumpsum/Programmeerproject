<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mprog.nl.programmeerproject.Activities.CreateProfileActivity">

    <TextView
        android:id="@+id/createProfNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameHint"
        android:padding="10dp"
        />

    <LinearLayout
        android:id="@+id/createProfNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/createProfNameText"
        >

    <EditText
        android:id="@+id/createProfFirstEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/firstName"
        android:padding="10dp"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/createProfLastEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lastName"
        android:padding="10dp"
        android:layout_weight="1"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/createProfGenAgeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genderAgeHint"
        android:layout_below="@id/createProfNameLayout"
        />

    <Spinner
        android:id="@+id/createProfGenderSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createProfGenAgeText"
        />

    <EditText
        android:id="@+id/createProfAgeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/age"
        android:layout_below="@id/createProfGenderSpinner"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/createProfAdressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signUpHint"
        android:layout_below="@id/createProfAgeEdit"
        android:padding="10dp"
        />

    <LinearLayout
        android:id="@+id/createProfAdressLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createProfAdressText"
        >

    <EditText
        android:id="@+id/createProfStreetEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/street"
        android:layout_below="@id/createProfAdressText"
        android:padding="10dp"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/createProfNumberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/number"
        android:layout_below="@id/createProfStreetEdit"
        android:inputType="number"
        android:padding="10dp"
        android:layout_weight="1"
        />

</LinearLayout>

    <EditText
        android:id="@+id/createProfCityEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/city"
        android:layout_below="@id/createProfAdressLayout"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/createProfNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/next"
        />

</RelativeLayout>
