<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mprog.nl.programmeerproject.Activities.EditProfileActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/editProfFirstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/editProfFirstText"
        android:orientation="horizontal"
        >

    <EditText
        android:id="@+id/editProfFirstEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/editProfLastEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLines="1"
        android:layout_weight="1"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/editProfGenderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender"
        android:layout_below="@+id/editProfFirstText"
        android:padding="10dp"
        />

    <Spinner
        android:id="@+id/editProfGenderSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfFirstText"
        android:layout_toRightOf="@+id/editProfGenderText"
        android:padding="10dp"
        >
    </Spinner>

    <TextView
        android:id="@+id/editProfAgeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:layout_below="@+id/editProfGenderText"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/editProfAgeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_below="@+id/editProfGenderText"
        android:layout_toRightOf="@+id/editProfAgeText"
        />

    <TextView
        android:id="@+id/editProfAdressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adress"
        android:layout_below="@+id/editProfAgeText"
        android:padding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/editProfAdressText"
        android:layout_below="@+id/editProfAgeText"
        >

    <EditText
        android:id="@+id/editProfStreetEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/editProfNumEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="number"
        android:padding="10dp"
        android:layout_weight="1"
        />


    <EditText
        android:id="@+id/editProfCityEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_weight="1"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/editProfSportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport"
        android:layout_below="@+id/editProfAdressText"
        android:padding="10dp"
        />

    <Spinner
        android:id="@+id/editProfSportSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfAdressText"
        android:layout_toRightOf="@+id/editProfSportText"
        android:padding="10dp"
        >
    </Spinner>

    <TextView
        android:id="@+id/editProfLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:layout_below="@+id/editProfSportText"
        android:padding="10dp"
        />

    <Spinner
        android:id="@+id/editProfLevelSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfSportText"
        android:layout_toRightOf="@+id/editProfLevelText"
        android:padding="10dp"
        >
    </Spinner>

    <TextView
        android:id="@+id/editProfDescText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:layout_below="@+id/editProfLevelText"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/editProfDescEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfLevelText"
        android:layout_toRightOf="@+id/editProfDescText"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/editProfSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        />

</RelativeLayout>
